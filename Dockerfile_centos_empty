FROM centos

# Install any necessary packages
RUN yum update -y --disablerepo=appstream --disablerepo=baseos && yum install -y --nobest nano vim

COPY amazon-corretto-15.0.2.7.1-linux-x64 /usr/src/app/amazon-coretto-jdk
ENV JAVA_HOME=/usr/src/app/amazon-coretto-jdk
ENV PATH="${JAVA_HOME}/bin:${PATH}"

# Add a command that runs continuously
CMD tail -f /dev/null
